<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.toprako.ocr2.goruntuleme.DokunusGoruntuleme
        android:id="@+id/kayit_edilen_text_img"
        android:layout_width="match_parent"
        android:layout_marginBottom="45dp"
        android:src="@android:color/holo_blue_dark"
        android:layout_marginTop="55dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/kayit_edilen_text_geridonen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_KameraCalistir"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:text="Kamera"
        android:background="#fff"
        android:layout_width="100dp"
        android:textColor="#ff6347"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_Cikis"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="1dip"
        android:layout_marginTop="2dip"
        android:layout_toLeftOf="@id/btn_KameraCalistir"
        android:background="#fff"
        android:text="Çıkış"
        android:textColor="#ff6347" />

    <Button
        android:id="@+id/btn_Bilgi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/btn_KameraCalistir"
        android:background="#fff"
        android:text="Bilgi"
        android:textColor="#ff6347" android:enabled="false"/>
</RelativeLayout>